{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "CommonJS",
    "outDir": "./dist", 
    "rootDir": "./",   
    "strict": true,     
    "esModuleInterop": true, 
    "skipLibCheck": true,  
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,    
    "checkJs": false,   
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true 
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts", 
    "__tests__",
     "docs",
     "examples",
     "scripts", 
     "temp",
     "uploads"
  ]
} 