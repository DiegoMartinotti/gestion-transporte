# Configuración de entorno para la aplicación
# Renombrar a .env y configurar los valores adecuados

# Configuración general
NODE_ENV=development
PORT=3001

# Configuración de Base de Datos
MONGODB_URI=mongodb://localhost:27017/mi-proyecto

# Límites de procesamiento de solicitudes
JSON_BODY_LIMIT=5mb
URLENCODED_BODY_LIMIT=5mb
URLENCODED_PARAM_LIMIT=1000

# Seguridad
JWT_SECRET=cambiar_por_secreto_seguro
JWT_COOKIE_MAX_AGE=86400000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
PROXY_RATE_LIMIT_WINDOW_MS=60000
PROXY_RATE_LIMIT_MAX=10

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://mi-proyecto.com
