{
  "version": "2.6",
  "project": {
    "name": "gestion-transporte",
    "collection": "gestion-transporte",
    "description": "Configuration for gestion-transporte",
    "version": "1.0.0"
  },
  "indexing": {
    "enabled": true,
    "incremental": true,
    "file_patterns": {
      "include": [
        "*.py",
        "*.pyi",
        "*.js",
        "*.ts",
        "*.jsx",
        "*.tsx",
        "*.mjs",
        "*.cjs",
        "*.html",
        "*.htm",
        "*.css",
        "*.json",
        "*.yaml",
        "*.yml",
        "*.md",
        "*.txt"
      ],
      "exclude": [
        "*.pyc",
        "__pycache__",
        ".git",
        ".venv",
        "node_modules",
        "dist",
        "build",
        "*.min.js",
        ".env",
        "*.log",
        ".mypy_cache",
        "qdrant_storage",
        "backups",
        "*.egg-info",
        "settings.txt",
        ".claude-indexer",
        "package-lock.json",
        "memory_guard_debug.txt"
      ]
    },
    "max_file_size": 1048576,
    "parser_config": {
      "javascript": {
        "enabled": true,
        "config": {}
      },
      "markdown": {
        "enabled": true,
        "config": {}
      }
    }
  },
  "watcher": {
    "enabled": true,
    "debounce_seconds": 2.0,
    "use_gitignore": true
  }
}